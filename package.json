  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/modules/*.js",
      "!src/plugins/*.js",
      "!src/renv/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/build",
      "<rootDir>/dist",
      "<rootDir>/node_modules",
      "<rootDir>/src/modules",
      "<rootDir>/src/renv",
      "<rootDir>\\build",
      "<rootDir>\\dist",
      "<rootDir>\\node_modules",
      "<rootDir>\\src\\modules",
      "<rootDir>\\src\\renv"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePathIgnorePatterns": [
      "build",
      "dist",
      "node_modules",
      "modules",
      "renv",
      "/build/",
      "/dist/",
      "/node_modules/",
      "/modules/",
      "/renv/",
      "<rootDir>/build",
      "<rootDir>/dist",
      "<rootDir>/node_modules",
      "<rootDir>/src/modules",
      "<rootDir>/src/renv",
      "<rootDir>\\build",
      "<rootDir>\\dist",
      "<rootDir>\\node_modules",
      "<rootDir>\\src\\modules",
      "<rootDir>\\src\\renv"
    ],
    "testPathIgnorePatterns": [
      "build",
      "dist",
      "node_modules",
      "modules",
      "renv",
      "/build/",
      "/dist/",
      "/node_modules/",
      "/modules/",
      "/renv/",
      "<rootDir>/build",
      "<rootDir>/dist",
      "<rootDir>/node_modules",
      "<rootDir>/src/modules",
      "<rootDir>/src/renv",
      "<rootDir>\\build",
      "<rootDir>\\dist",
      "<rootDir>\\node_modules",
      "<rootDir>\\src\\modules",
      "<rootDir>\\src\\renv"
    ],
    "verbose": true
  },
  "scripts": {
    "build": "rollup -c",
    "build:r": "Rscript -e 'pkgbuild::clean_dll(); pkgbuild::compile_dll(); devtools::document(); devtools::check(); devtools::install();'",
    "tsc": "tsc --jsx react --resolveJsonModule",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "render:readme": "quarto render README.qmd --to gfm --output README.md",
    "type:check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui"
  }
}
